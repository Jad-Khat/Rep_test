# Area of a Triangle
def area_t(height, base):
  area = height*ase/2
  print("The area of the triangle is: ", area)
  return area
# Perimeter of a Triangle
def perimeter_t (s1, s2, s3):
  perimeter = s1 + s2 + s3
  print("The perimeter of the triangle is: ", perimeter)
  return perimter

